<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:text="QUẢN LÝ LỚP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <View android:layout_width="40dp" android:layout_height="40dp"/>
    </LinearLayout>

    <EditText android:id="@+id/edtMaLop" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Mã Lớp"/>
    <EditText android:id="@+id/edtTenLop" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Tên Lớp"/>
    <EditText android:id="@+id/edtKhoa" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Khoa"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="10dp">
        <Button android:id="@+id/btnAddLop" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Thêm"/>
        <Button android:id="@+id/btnEditLop" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Sửa"/>
        <Button android:id="@+id/btnDelLop" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Xóa" android:backgroundTint="#D32F2F"/>
    </LinearLayout>

    <ListView android:id="@+id/lvLop" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp"/>
</LinearLayout>