<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="Điểm Danh"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvMonHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học: Lập trình Java"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvLop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: CNTT01"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvNgayHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 15/12/2024"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiết: 1-3"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCoMat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Có mặt: 0"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vắng: 0"
                    android:textSize="14sp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="0dp">

        <Button
            android:id="@+id/btnDiemDanhTatCa"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Có mặt tất cả"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnVangTatCa"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Vắng tất cả"
            android:textColor="@android:color/white"
            android:background="#F44336"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Lưu Điểm Danh"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimary" />

</LinearLayout>