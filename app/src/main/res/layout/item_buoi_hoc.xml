<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMonHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình Java"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvLop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: CNTT01"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvGiangVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GV: Nguyễn Văn A"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvNgayHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 15/12/2024"
                android:textSize="14sp"
                android:textColor="#333"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiết: 1-3"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDiemDanh"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_attendance"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Điểm danh"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm danh"
                android:textSize="12sp"
                android:textColor="#4CAF50" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>