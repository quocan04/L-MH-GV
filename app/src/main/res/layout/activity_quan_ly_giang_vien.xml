<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">
        <ImageButton android:id="@+id/btnBackGV" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_revert" android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="QUẢN LÝ GIẢNG VIÊN" android:textSize="20sp" android:textStyle="bold" android:gravity="center"/>
        <View android:layout_width="40dp" android:layout_height="40dp"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <TextView android:text="1. Thông tin GV" android:textStyle="bold"/>
            <EditText android:id="@+id/edtMaGV" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Mã GV"/>
            <EditText android:id="@+id/edtTenGV" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Tên GV"/>
            <EditText android:id="@+id/edtSdtGV" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Số ĐT" android:inputType="phone"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="10dp">
                <Button android:id="@+id/btnAdd" android:layout_width="0dp" android:layout_weight="1" android:text="Thêm" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btnUpdate" android:layout_width="0dp" android:layout_weight="1" android:text="Sửa" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btnDelete" android:layout_width="0dp" android:layout_weight="1" android:text="Xóa" android:backgroundTint="#D32F2F" android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView android:text="2. Phân công giảng dạy" android:textStyle="bold" android:layout_marginTop="10dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="#E0F7FA" android:padding="10dp" android:layout_marginBottom="10dp">
                <TextView android:text="Chọn Môn:" />
                <Spinner android:id="@+id/spnMonHoc" android:layout_width="match_parent" android:layout_height="48dp" android:background="@android:drawable/btn_dropdown"/>
                <TextView android:text="Chọn Lớp:" android:layout_marginTop="5dp"/>
                <Spinner android:id="@+id/spnLop" android:layout_width="match_parent" android:layout_height="48dp" android:background="@android:drawable/btn_dropdown"/>
                <Button android:id="@+id/btnPhanCong" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lưu Phân Công" android:layout_marginTop="5dp"/>
            </LinearLayout>

            <TextView android:text="Danh sách GV:" android:textStyle="italic"/>
            <ListView android:id="@+id/lvGiangVien" android:layout_width="match_parent" android:layout_height="300dp" android:background="#FAFAFA"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>