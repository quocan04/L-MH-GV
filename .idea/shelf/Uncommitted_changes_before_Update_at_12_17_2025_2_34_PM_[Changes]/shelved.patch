+    public boolean addGiangVien(String ma, String ten, String sdt) {
+        GiangVien gv = new GiangVien(ma, ten, sdt, "");
+        return addUseCase.execute(gv);
+    }
+
+    public List<GiangVien> getAllGiangVien() {
+        return getAllUseCase.execute();
+    }
